{
    "apps": [
        {
            "name": "ed-server",
            "script": "npm",
            "args" : ["start"],
            "max_restarts": 3,
            "log_date_format": "YYYY-MM-DD HH:mm Z",
            "error_file": "logs/dev.lms.error.log",
            "out_file": "logs/dev.lms.out.log",
            "watch": ["bin","app.js","views","routes","public"],
            "env": {
                "NODE_ENV": "development",
                "DEBUG" : "server"
            }
        }
    ]
}

